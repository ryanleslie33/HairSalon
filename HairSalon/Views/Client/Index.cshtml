@using HairSalon.Models;
<h1>Hair salon</h1>
<ul>

  @if (Model.Count == 0)
  {
    <p>You have no clients!</p>
  }
  @if(Model.Count != 0)
  {
    @foreach (Client client in Model)
    {
      <li><a href='/Client/@client.GetId()'>@client.GetClientName()</a></li>
    }
  }
</ul>

<a href="/Stylist/new">Add a stylist</a>
<a href="/Client/new">Add a new item.</a>

<form action="/Client/delete" method="post">
  <button type="submit" name="button">Clear All Clients</button>
</form>
